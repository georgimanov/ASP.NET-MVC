@using (Html.BeginForm("Search", "Ideas", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form"
}))
{
    @Html.AntiForgeryToken()

    <div class="col-lg-6 pull-right">

        <input type="text" class="form-control col-lg-6" name="search" placeholder="Search" required />

        <input type="submit" class="btn btn-default " value="Search" />
    </div>
}
<div class="clearfix"></div>
