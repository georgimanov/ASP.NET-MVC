<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MvcTemplate</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/kendo")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MvcTemplate", "Index", "Home", new
           {
               area = string.Empty
           }, new
           {
               @class = "navbar-brand"
           })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new
                   {
                       area = string.Empty
                   }, null)</li>

                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Comments", "All", "Comments", new
                       {
                           area = "Administration"
                       }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Ideas", "Index", "Ideas", new
                   {
                       area = "Administration"
                   }, null)
                        </li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (this.TempData["Notification"] != null)
        {
            <div class="alert alert-success" role="alert">
                @this.TempData["Notification"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MvcTemplate</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")
    @RenderSection("scripts", required: false)
</body>
</html>
