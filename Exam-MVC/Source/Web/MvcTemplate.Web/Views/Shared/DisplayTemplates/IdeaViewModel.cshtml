@model MvcTemplate.Web.ViewModels.Home.IdeaViewModel

<div class="row">
    <div class="col-lg-2  text-center">
        <div class="well well-sm text-center">
            <strong>@Model.VotesCount</strong>
            <br />
            <span>votes</span>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" class="btn btn-lg btn-default" value="Vote" />
        </div>
    </div>
    <div class="col-lg-10 list-group-item-heading">
        <h3>
            <a href="@Model.Url">@Model.Title</a>
        </h3>
        <div class="text-info text-left">
            @Html.Raw(Model.DescriptionView.Replace("\n", "<br />"))
        </div>
        <br />
        <p>
            <span>@Model.CommentsCount </span> comments
        </p>
    </div>
</div>

